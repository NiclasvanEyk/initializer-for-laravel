// https://aka.ms/devcontainer.json
{
	"name": "Existing Docker Compose (Extend)",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"remoteEnv": {
		"WWWGROUP": "1000",
		"WWWUSER": "1000"
	},
	"service": "laravel.test",
	"workspaceFolder": "/var/www/html",
	"settings": {},
	"extensions": [
		"mikestead.dotenv",
		"amiralizadeh9480.laravel-extra-intellisense",
		"ryannaddy.laravel-artisan",
		"onecentlin.laravel5-snippets",
		"onecentlin.laravel-blade",
		"emallin.phpunit",
		"editorconfig.editorconfig",
		"bmewburn.vscode-intelephense-client"
	],
	"remoteUser": "sail",
	"forwardPorts": [8000, 80],
	"runServices": ["laravel.test"],
	"postCreateCommand": "code disable-extension vscode.php-language-features && npm install --no-save && composer install && cp .env.example .env && php artisan key:generate && php artisan initializer:update-template && npm run dev",
	// "shutdownAction": "none",
}
