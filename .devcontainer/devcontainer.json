{
	"name": "Existing Docker Compose (Extend)",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"remoteEnv": {
		"WWWGROUP": "1000",
		"WWWUSER": "1000"
	},
	"service": "laravel.test",
	"workspaceFolder": "/var/www/html",
	"settings": {},
	"extensions": [
		"mikestead.dotenv",
		"amiralizadeh9480.laravel-extra-intellisense",
		"ryannaddy.laravel-artisan",
		"onecentlin.laravel5-snippets",
		"onecentlin.laravel-blade"
	],
	"remoteUser": "sail",
	"forwardPorts": [8000],
	// "runServices": [],
	"postCreateCommand": "npm ci && composer install && cp .env.example .env && php artisan key:generate",
